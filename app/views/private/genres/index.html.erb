<div class="title-group">
  <div class="title">
    <h4>ジャンル一覧・追加</h4>
  </div>
</div>

<!--エラーメッセージ-->
<div class="error-text">
  <% if @genre.errors.any? %>
	  <h2><%= @genre.errors.count %>errors prohibited this book from being saved:</h2>
		<ul>
			<% @genre.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
		</ul>
  <% end %>
</div>

<div class="container">
  <div class="genre-form">
    <div class="row">
      <div class="form-horizontal" role="form">
        <%= form_with model: @genre, url: private_genres_path, local: true do |f| %>
          <div class="form-group p-3">
            <div class="col-md-12">
              <div class="genrename">
                <%= f.label :name, "ジャンル名" %>
                  <%= f.text_field :name, autofocus: true %>
                  <%= f.submit "新規登録", class: "btn btn-success" %>
                </div>
            </div>
          </div>
        <% end%>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="genre-table">
      <table width= "300px">
        <th class="text-center bg-light" height="50px">ジャンル名</th>
        <th class="bg-light" width= "100px"></th>
        <% @genres.each do |genre| %>
          <tr>
            <td class="text-left" height="50px"><%= genre.name %></td>
            <td class="text-left"><%= link_to "編集する", edit_private_genre_path(genre.id), class: "btn btn-success" %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
