<div class="product-new">
  <div class="container">
    <div class="private-product-title">
      <div class="row">
        <div class="col-md-6" >
          <h2><span style="background-color:#f5f5f5">ジャンル一覧・追加</span></h2>
        </div>
      </div>
   <div class="error-text">
    <% if @genre.errors.any? %>
		  <h2><%= @genre.errors.count %>errors prohibited this book from being saved:</h2>
  			<ul>
  			<% @genre.errors.full_messages.each do |message| %>
  				<li><%= message %></li>
  			<% end %>
  			</ul>
	  <% end %>
  </div>
    <div class="genre-form">
      <div class="row">
        <div class="form-horizontal" role="form">
          <%= form_with model: @genre, url: private_genres_path, local: true do |f| %>
            <div class="form-group p-3">
              <div class="col-md-12 col-md-offset-2">
                <%= f.label :name, "ジャンル名" %>
                <%= f.text_field :name, autofocus: true %>
                <%= f.submit "新規登録", class: "btn btn-success" %>
              </div>
            </div>
          <% end%>
        </div>
      </div>
    </div>
      <div class="row">
        <div class="">
          <table width= 500px>
            <th>ジャンル名</th>
            <% @genres.each do |genre| %>
              <tr>
                <td><%= genre.name %></td>
                <td><%= link_to "編集する", edit_private_genre_path(genre.id), class: "btn btn-success" %></td>
              </tr>
            <% end %>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>


