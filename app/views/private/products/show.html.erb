<div class="container">
  <div class="row">
    <h2><span style="background-color:#f5f5f5">商品詳細</span></h2>
  </div>

  <div class="row">
    <div class="col-xs-4">
      <%= attachment_image_tag @product, :image, format: "jpg", fallback: "no_image.jpg", size:"250x250" %>
    </div>
    <div class="col-xs-8">
      <table>
        <tr>
          <td>
            商品名
          </td>
          <td>
            <%= @product.name %>
          </td>
        </tr>
        <tr>
          <td>
            商品説明
          </td>
          <td>
            <%= @product.description %>
          </td>
        </tr>
        <tr>
          <td>
            ジャンル
          </td>
          <td>
            <%= @product.genre_id %>
          </td>
        </tr>
        <tr>
          <td>
            税込価格<br>(税抜価格)
          </td>
          <td>
            <%= @product.ex_price*1.1 %>(<%= @product.ex_price %>)円
          </td>
        </tr>
        <tr>
          <td>
            販売ステータス
          </td>
          <td>
            <% if @product.is_active == true %>
              販売中
            <% else %>
              売り切れ
            <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="text-right">
      <%= link_to "編集", edit_private_product_path(@product.id), class: "btn btn-success" %>
    </div>
  </div>
</div>