<div class="container">
  <div class="private-product-title">
    <div class="row">
      <h2><span style="background-color:#f5f5f5">商品詳細</span></h2>
    </div>
  </div>

  <div class="row">
    <div class="col-md-3">
      <%= attachment_image_tag @product, :image, format: "jpg", fallback: "no_image.jpg", size:"200x200" %>
    </div>
    <div class="col-xs-4">
      <table>
        <tr>
          <td width="150">
            商品名
          </td>
          <td width="200">
            <%= @product.name %>
          </td>
        </tr>
        <tr>
          <td>
            商品説明
          </td>
          <td>
            <%= @product.description %>
          </td>
        </tr>
        <tr>
          <td>
            ジャンル
          </td>
          <td>
            <%= @product.genre.name %>
          </td>
        </tr>
        <tr>
          <td>
            税込価格<br>(税抜価格)
          </td>
          <td>
            <%= ((@product.ex_price*1.1).round(2).ceil) %>&ensp;(<%= @product.ex_price %>)円
          </td>
        </tr>
        <tr>
          <td>
            販売ステータス
          </td>
          <td>
            <% if @product.is_active == true %>
              <p class="text-success">販売中</p>
            <% elsif @product.is_active == false %>
              <p class="text-muted">販売停止中</p>
            <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>
  <!--<div class="edit-btn">-->
  <div class="col-11 text-center">
      <%= link_to "編集する", edit_private_product_path(@product.id), class: "btn btn-success" %>
  </div>
