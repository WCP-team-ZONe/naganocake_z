<div class="container">
    <div scope="row">
        <!--<div class="col-md-6 col-xs-offset-1">-->
        <div class="col">
            <table class="table table-hover table-resposive ">
                <thead class="thead-color">
                    <tr>
                        <td>
                            商品ID
                        </td>
                        <td>
                            商品名
                        </td>
                        <td>
                            税抜価格
                        </td>
                        <td>
                            ジャンル
                        </td>
                        <td class="class="text-center"">
                            販売ステータス
                        </td>
                    </tr>
                </thead>
                <tbody>
                    <% @products.each do |product| %>
                        <tr>
                            <td>
                                <%= product.id%>
                            </td>
                            <td>
                                <%= link_to product.name, private_product_path(product.id)%>
                            </td>
                            <td>
                                ¥<%= (product.ex_price * @tax).floor.to_s(:delimited) %>
                                <!--<#%= number_with_delimiter(product.ex_price) %>-->
                            </td>
                            <td>
                                <%= product.genre.name %>
                            </td>
                            <td class="text-center">
                                <% if product.is_active == true %>
                                  <p class="text-success">販売中</p>
                                <% elsif product.is_active == false %>
                                  <p class="text-muted">販売停止中</p>
                                <% end %>
                            </td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    <div class="paginate">
        <%= paginate @products %>
    </div>
</div>