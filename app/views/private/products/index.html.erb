<div class="container">
    <div class="private-product-title">
        <div class="row">
            <div class="col-md-6"><!-- col-xs-offset-1-->
                <h2><span style="background-color:#f5f5f5">商品一覧</span></h2>
            </div>
            <div class="col-md-6  text-right">
                <%= link_to "＋", new_private_product_path, class: "btn btn-outline-dark", style: "border-radius: 100%" %>
            </div>
        </div>
    </div>
    <div scope="row">
        <!--<div class="col-md-6 col-xs-offset-1">-->
        <div class="col">
            <table class="table table-hover table-resposive">
                <thead>
                    <tr>
                        <td>
                            商品ID
                        </td>
                        <td>
                            商品名
                        </td>
                        <td>
                            税抜価格
                        </td>
                        <td>
                            ジャンル
                        </td>
                        <td class="text-right">
                            販売ステータス
                        </td>
                    </tr>
                </thead>
                <tbody>
                    <% @products.each do |product| %>
                        <tr>
                            <td>
                                <%= product.id%>
                            </td>
                            <td>
                                <%= link_to product.name, private_product_path(product.id)%>
                            </td>
                            <td>
                                <%= number_with_delimiter(product.ex_price) %>
                            </td>
                            <td>
                                <%= product.genre_id %>
                            </td>
                            <td class="text-right">
                                <% if product.is_active == true %>
                                  <p class="text-success">販売中</p>
                                <% elsif product.is_active == false %>
                                  <p class="text-muted">販売停止中</p>
                                <% end %>
                            </td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    <div class="paginate">
        <%= paginate @products %>
    </div>
</div>