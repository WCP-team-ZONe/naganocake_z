<div class="product-new">
    <div class="container">

        <div class="private-product-title">
            <div class="row">
                <div class="col-xs-6 col-xs-offset-0">
                    <h2><span style="background-color:#f5f5f5">商品新規登録</span></h2>
                </div>
            </div>
        </div>

      <div class="error-text">
      	<% if @product.errors.any? %>
      		<h2><%= @product.errors.count %>errors prohibited this book from being saved:</h2>
      			<ul>
      			<% @product.errors.full_messages.each do |message| %>
      				<li><%= message %></li>
      			<% end %>
      			</ul>
      	<% end %>
      </div>

        <%= form_with model:@product,url:private_products_path, local: true do |f| %>
            <div class="row">
                <table>
                <!--商品画像画像登録-->
                    <div class="col-xs-4">
                        <tr>
                            <td width="150">
                                商品画像
                            </td>
                            <td>
                                <%= attachment_image_tag @product, :image, fallback: "no_image.jpg", size:"50x50" %>
                                <!--< %= attachment_image_tag @product, :image,format: "jpg", fallback: "no_image.jpg", size:"50x50" %>-->
                                <%= f.attachment_field :image, placeholder:"商品画像" %>
                            </td>
                        </tr>
                     </div>
                <!--商品項目入力欄-->
                    <div class="form-group">
                        <tr>
                            <td>
                                <%= f.label :name, "商品名" %>
                            </td>
                            <td>
                                <%= f.text_field :name, placeholder: "商品名" %>
                            </td>
                        </tr>
                    </div>
                    <div class="form-group">
                        <tr>
                            <td>
                                <%= f.label :description, "商品説明" %>
                            </td>
                            <td>
                                <%= f.text_area :description, placeholder: "ここに説明文を記述します", size: "30x5" %>
                            </td>
                        </tr>
                    </div>
                    <div class="form-group">
                        <tr>
                            <td>
                                <%= f.label :genre_id, "ジャンル" %>
                            </td>
                            <td>
                                <%= f.collection_select :genre_id, Genre.all, :id, :name, prompt: "-- 選択してください --", class: "form-control" %>
                            </td>
                        </tr>
                    </div>
                    <div class="form-group">
                        <tr>
                            <td>
                                <%= f.label :ex_price, "税抜価格" %>
                            </td>
                            <td>
                                <%= f.text_field :ex_price, placeholder: "1000" %>円
                            </td>
                        </tr>
                    </div>
                    <div class="form-group">
                        <tr>
                            <td>
                                <%= f.label :is_active, "販売ステータス" %>
                            </td>
                            <td>
                                <%= f.radio_button :is_active, true %>
                                <%= f.label :is_active, "販売中", {value: :true} %>
                                <%= f.radio_button :is_active, false, class: "ml-3" %>
                                <%= f.label :is_active, "販売停止中", {value: :false} %>
                            </td>
                        </tr>
                    </div>

                    <div class="submit-btn">
                        <tr>
                          <td></td>
                            <td>
                                <%= f.submit "新規登録" , class: "btn btn-primary"  %>
                            </td>
                        </tr>
                    </div>
                </table>
            </div>
        <% end %>
    </div>
</div>