<h1>Orders#show</h1>
<p>Find me in app/views/orders/show.html.erb</p>

<div class="container">
  <div class="row">
    <div class="col-12">
      <h4 class="orders-title mt-5 mb-2"><span class="orders-title-span">注文履歴詳細</span></h4>

<!-- 注文ステータス -->
      <div class="row">
        <div class="col-4">
          <div class="field">
            <p>購入者</p>
          </div>
          <div class="field col-8">
            <%= @order.member.family_name %><%= @order.member.first_name %>
          </div>

          <div class="field col-4">
            <p>注文日</p>
          </div>
          <div class="col-8 col-8">
            <%= @order.created_at %>
          </div>


          <div class="field col-4">
            <p>配送先</p>
          </div>
          <div class="col-8">
            〒<%= @order.postal_code %> <%= @order.address %><br>
              <%= @order.name %>
          </div>


          <div class="field col-4">
            <p>支払い方法</p>
          </div>
          <div class="col-8">
            <%= @order.payment %>
          </div>


          <div class="field col-4">
            <p>注文ステータス</p>
          </div>
          <div class="col-6">
            <%= form_with model: @order local: true method: :patch do |f|  %>
              <%= f.select :order_status, [["入金待ち":0]["入金確認":1]["製作中":2]["発送準備中":3]["発送済み":4]] %>
          </div>
          <div class="col-2">
              <%= f.submit "更新", class: "btn btn-primay" %>
              <% end %>
          </div>
        </div>
      </div>
    </div>

      <!-- 制作ステータス -->
          <div class="row">
            <div class="col-8">
              <table>

                <tr>
                  <th>商品名</th>
                  <th>単価(税抜)</th>
                  <th>数量</th>
                  <th>小計</th>
                  <th>制作ステータス</th>
                </tr>

              <%= @ordered_products.each do |order_product| %>
                <tr>
                  <td><%= oreder_product.name %></td>
                  <td><%= oreder_product.ex_price %></td>
                  <td><%= oreder_product.quantity %></td>
                  <td><%= (oreder_product.products.purchased_price)*(order_product.quantity) %></td>
                <%= form_with model: @ordered_products  local: true method: :patch do |f|  %>
                  <td><%= f.select :production_status,[["着手不可":0][ "制作待ち":1][ "制作中":2]["製作完了":3] %></td>
                  <td><%= f.submit "更新", class: "btn btn-primay" %></td>
                <% end %>
                </tr>
              <% end %>
              </table>
              </div class="total">
                <h4>商品合計 <%= @order.total_price %></h4>
                <h4>送料<%= @order.postage %></h4>
                <h4>請求金額合計 <%= @order.total_price %></h4>
              </div>
            </div>
          </div>