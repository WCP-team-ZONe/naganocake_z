<div class="container">
  <div class="row">
    <div class="col-12">
      <h4 class="orders-title mt-5 mb-2"><span class="orders-title-span">注文履歴詳細</span></h4>

<!-- 注文ステータス -->
      <div class="row">
          <div class="field col-4">
            <p>購入者</p>
          </div>
          <div class="field col-8">
            <%= @order.member.family_name %><%= @order.member.first_name %>
          </div>

          <div class="field col-4">
            <p>注文日</p>
          </div>
          <div class="col-8">
            <%= @order.created_at.strftime("%Y-%m-%d %H:%M:%S") %>
          </div>


          <div class="field col-4">
            <p>配送先</p>
          </div>
          <div class="col-8">
            〒<%= @order.postal_code %> <%= @order.address %><br>
              <%= @order.name %>
          </div>


          <div class="field col-4">
            <p>支払い方法</p>
          </div>
          <div class="col-8">
            <% if @order.payment == "0" %>
              <p>　　クレジットカード</p>
            <% elsif @order.payment == "1" %>
              <p>　　銀行振込</p>
            <% end %>
          </div>


          <div class="field col-4">
            <p>注文ステータス</p>
          </div>
          <div class="col-6">
            <%= form_with model: @order, url: private_order_path, local: true, method: :patch  do |f|  %>
              <%= f.select :order_status, ["入金待ち","入金確認","製作中","発送準備中","発送済み"] %>
              <%= f.submit "更新", class: "btn btn-success" %>
          </div>

              <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

      <!-- 制作ステータス -->
          <div class="row">
            <div class="col-8">
              <table class="border">

                <tr class="">
                  <th>商品名</th>
                  <th>単価(税抜)</th>
                  <th>数量</th>
                  <th>小計</th>
                  <th>制作ステータス</th>
                </tr>

              <% @ordered_products.each do |ordered_product| %>
                <tr>
                  <td><%= ordered_product.product.name %></td>
                  <td><%= ordered_product.product.ex_price %></td>
                  <td><%= ordered_product.quantity %></td>
                  <td><%= (ordered_product.purchased_price)*(ordered_product.quantity) %></td>
                <%= form_with model: ordered_product, url: private_ordered_product_path(ordered_product), local: true, method: :patch do |f|  %>
                  <td><%= f.select :production_status,["着手不可","制作待ち","製作中","制作完了"] %></td>
                  <td><%= f.submit "更新", class: "btn btn-success" %></td>
                <% end %>
                </tr>
              <% end %>
              </table>

              </div class="total">
                <h4>商品合計 <%= @order.total_price%>円</h4>
                <h4>送料<%= @order.postage %>円</h4>
                <h4>請求金額合計 <%= (@order.total_price)+(@order.postage) %>円</h4>
              </div>
            </div>
          </div>
        </div>
