<div class="container">
  <div class="row">
     <div class="col-10">
        <br>
        <h4 class="admin-logitn text-left"><span class="login-title">管理者ログイン</span></h4>
        <br>
    </div>
  </div>

  <div class="row">
    <div class="col-10">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field-email">
          <%= f.label :"メールアドレス" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "sm-6 ml-3 rounded", :size => "50x50" %>
        </div>

        <div class="field-password">
          <%= f.label :"パスワード"%>
          <%= f.password_field :password, autocomplete: "current-password", class: "sm-6 ml-5 mb-4 rounded", :size => "50x50" %>
        </div>

        <div class="actions text-center">
          <%= f.submit "    ログイン    ", class: "btn btn-primary m-2" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
