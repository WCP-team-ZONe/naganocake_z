<main>
  <div calss="container">
    <div class="row">
      <div class="col-md-11 offset-md-1">

        <div class="field col-md-3 offset-sm-1 py-5">
          <h3 class="bg-white text-center p-2">マイページ</h3>
        </div>

        <div class="field col-md-11">
          <p class="category-title">
            <strong class:"col-sm-4 bg-white">登録情報　　</strong>
            <%= link_to "編集する", edit_member_path, class:"col-sm-3 btn-success text-white sircle-btn p-2" %>
          </p>
        </div>

        <table class="table table-bordered col-md-8 member-info-table">
          <tr>
            <td  class="bg-light", style="width:30%">氏名</td>
            <td style="width:70%"><%= @member.family_name+@member.first_name %></td>
          </tr>
          <tr>
            <td class="bg-light">カナ</td>
            <td><%= @member.family_kana+@member.first_kana %></td>
          </tr>
          <tr>
            <td class="bg-light">郵便番号</td>
            <td><%= @member.postal_code %></td>
          </tr>
          <tr>
            <td class="bg-light">住所</td>
            <td><%= @member.address %></td>
          </tr>
          <tr>
            <td class="bg-light">電話番号</td>
            <td><%= @member.phone_number %></td>
          </tr>
          <tr>
            <td class="bg-light">メールアドレス</td>
            <td><%= @member.email %></td>
          </tr>
        </table>

        <div class="field col-md-11 pt-3">
          <p class="category-title">
            <strong class:"col-sm-4">配送先　　　</strong>
            <%= link_to "一覧を見る", addresses_path, class:"col-sm-3 btn-primary text-white sircle-btn p-2" %>
          </p>
        </div>

        <div class="field col-md-11 py-3">
          <p class="category-title">
            <strong class:"col-sm-4">注文履歴　　</strong>
            <%= link_to "一覧を見る", orders_path, class:"col-sm-3 btn-primary text-white sircle-btn p-2" %>
          </p>
        </div>
      </div>
    </div>
  </div>
</main>