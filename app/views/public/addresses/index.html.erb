<div class="row">
  <div class="col-md-12">
      <div class="col-md-3 offset-md-2 bg-light text-center my-5">
        <h3>配送先登録/一覧</h3>
      </div>
          <div class="col-md-11 offset-md-1">
            <%= form_with model: @address, url: addresses_path, id: 'new_address', class: 'new_address', local: true do |f| %>
            <div class="col-md-11">
                <%= f.label :"郵便番号(ハイフンなし)" ,class: "col-md-3" %>
                <%= f.text_field :postal_code, class: "col-md-3 " %>
            </div>

            <div class="col-md-11">
                <%= f.label :"住所" ,class: "col-md-3 " %>
                <%= f.text_field :address, class: "col-md-7" %>
            </div>

            <div class="col-md-11">
                <%= f.label :"宛名" ,class: "col-md-3" %>
                <%= f.text_field :name, class: "col-md-3" %>
            </div class="col-md-11">
                <%= f.submit '新規登録' ,class: "col-md-2 offset-md-3  btn-success text-white mt-3" %>
            </div>
            <% end %>

            <table class="col-md-7 table table-bordered mt-5">
              <thead>
                  <tr class="info">
                    <th>郵便番号</th>
                    <th>住所</th>
                    <th>宛名</th>
                    <th colspan="2"></th>
                  </tr>
              </thead>

              <tbody>
                <% @addresses.each do |address| %>
                <tr class="text-left">
                  <td>
                    <%= address.postal_code %>
                  </td>
                  <td class="text-left">
                    <%= address.address %>
                  </td>
                  <td class="text-left">
                    <%= address.name %>
                  </td>
                  <td>
                    <%= link_to "編集する",edit_address_path(address), class: "col-sm-2 text-white btn-success" %>
                  </td>
                  <td>
                    <%= link_to "削除する",address_path(address), method: :delete, class: "col-sm-2 text-white btn-danger" %>
                  </td>
                </tr>
                <% end %>
              </tbody>
            </table>
      </div>
  </div>
</div>